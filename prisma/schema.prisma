generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Gender {
  male
  female
}

model Renter {
  id                       Int       @id @default(autoincrement())
  email                    String    @unique
  password                 String
  fullname                 String
  gender                   Gender
  profile_picture          String?   @default("./.temp-file-storage/avatar-default.png")
  email_verified           Boolean   @default(false)
  otp                      String?   @db.VarChar(5)
  otp_expiry               DateTime?
  forgot_password_verified Boolean   @default(false)
  createdAt                DateTime  @default(now())
  updatedAt                DateTime  @updatedAt

  @@map("renters")
}
